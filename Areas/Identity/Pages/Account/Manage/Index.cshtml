@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>

*{
	box-sizing: border-box;
	margin: 0;
	padding: 0;
}

body {
	font-family: 'Poppins', sans-serif;
	font-size: 16px;
	color: #333;
	background-color: #f7f7f7;
	line-height: 1.5;
}

    .navbar {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        background-color: #FFC0CB;
        color: #fff;
        padding: 10px;
        height: 120px;
    }

.search-button {
  background-color: #FFC0CB;
  color: #fff;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.2);
  cursor: pointer;
}

.search-button:hover {
  background-color: grey;
}

.search-button svg {
  fill: currentColor;
  vertical-align: middle;
}

input[type="text"] {
  flex: 1;
  padding: 8px;
  border: 2px solid #ccc;
  border-radius: 4px;
  font-size: 16px;
}

button[type="submit"] {
  background-color: #FFC0CB;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 4px;
  margin-left: 8px;
  font-size: 16px;
  cursor: pointer;
}


a {
        display: inline-block;
        padding: 10px 15px;
        color: #808080;
        text-decoration: none;
        font-size: 18px;
}

a:hover {
  text-decoration: underline;
}

li {
        display: inline-block;
        margin: 0 10px;
}

    .logo {
        display: flex;
        align-items: center;
        margin-bottom: 5px;
    }

.logo img {
        border-radius: 70%;
}

.logo p {
        font-family: 'Helvetica Neue', sans-serif;
        font-size: 18px;
        letter-spacing: 1px;
        text-align: center;
        color:#CBA135;
}

.profile-section {
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
  margin: 50px auto;
  max-width: 600px;
}

.profile-header {
  display: flex;
  align-items: center;
  padding: 20px;
}

.profile-picture {
  border-radius: 50%;
  margin-right: 20px;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.2);
}

.profile-info {
  flex: 1;
}

.profile-name {
  margin: 0;
  font-size: 24px;
}

.profile-email {
  margin: 5px 0 0;
  font-size: 16px;
}

.profile-link {
  display: inline-block;
  background-color: pink;
  color: grey;
  padding: 10px 20px;
  border: none;
  border-radius: 4px;
  text-decoration: none;
  font-size: 16px;
  margin-top: 10px;
}

.profile-link:hover {
  background-color: grey;
  color:pink;
}

.profile-details {
  padding: 20px;
}

.profile-subtitle {
  margin-top: 0;
}

.profile-fields {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

.profile-field {
  display: flex;
  flex-direction: column;
}

.profile-field label {
  font-weight: bold;
  margin-bottom: 5px;
}

.profile-value {
  margin: 0;
}

footer {
        background-color: #333;
        color:#808080; ;
        padding: 20px;
}

footer a {
        color: #FFC0CB;
}

.footer container {
        display: flex;
        justify-content: space-between;
        align-items: center;
}

</style>

<div class="navbar">
    <div class="logo">
        <a href="Home.html"><img src=https://i.pinimg.com/564x/24/c5/19/24c51940009a89449a3f0d0df6c96554.jpg alt="SparkleJewelers logo" width="150" height="150"></a>
        <p>SparkleJewelers</p>
    </div>
</div>

<br />


<br />

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ProfilePicture" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.ProfilePicture" class="form-label"></label>
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

<br/>

<br />

<footer>
    <div class="container">
        <ul class="footer__menu">
            <a href="About.html">Despre noi</a>
        </ul>
    </div>
</footer>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

