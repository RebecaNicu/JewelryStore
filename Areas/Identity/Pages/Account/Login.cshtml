@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background-color: #F9F9;
        font-family: 'Open Sans', sans-serif;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    .card-header {
        border-bottom: none;
        padding: 30px;
        text-align: center;
    }

    .card-title {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 0;
        text-transform: uppercase;
    }

    .card-body {
        padding: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        background-color: #F9F9;
        border-radius: 10px;
        border: none;
        box-shadow: none;
        padding: 20px;
        font-size: 16px;
        font-weight: 400;
        color: #666;
        width: 100%;
        height: 48px;
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            outline: none;
            box-shadow: none;
            border-color: #3C40C6;
        }

    .form-label {
        font-size: 14px;
        font-weight: 600;
        color: #999;
        margin-bottom: 5px;
        display: block;
        text-transform: uppercase;
    }

    .submit-btn {
        background-color: #3C40C6;
        border-radius: 10px;
        border: none;
        box-shadow: none;
        color: #fff;
        font-size: 16px;
        font-weight: 600;
        padding: 20px;
        text-transform: uppercase;
        width: 100%;
        transition: all 0.3s ease-in-out;
    }

        .submit-btn:hover {
            background-color: #1B1B1B;
        }

    .forgot-password-link {
        font-size: 14px;
        font-weight: 600;
        color: #999;
        display: block;
        margin-top: 20px;
        text-align: right;
        text-transform: uppercase;
    }

    .signup-link {
        font-size: 16px;
        font-weight: 600;
        color: #fff;
        display: block;
        margin-top: 20px;
        text-align: center;
        text-transform: uppercase;
        background-color: #F4B400;
        border-radius: 10px;
        border: none;
        box-shadow: none;
        padding: 20px;
        width: 100%;
        transition: all 0.3s ease-in-out;
    }

        .signup-link:hover {
            background-color: #1B1B1B;
        }
</style>

<section class="bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-3">Sign In</h2>
                            <hr class="mt-2" />

                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger text-danger"></div>

                                <div class="form-outline mb-4">
                                    <label asp-for="Input.Email" class="form-label">Your Email</label>
                                    <input asp-for="Input.Email" type="email" class="form-control form-control-lg" autocomplete="email" aria-required="true" placeholder="Email" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label asp-for="Input.Password" class="form-label">Password</label>
                                    <input asp-for="Input.Password" type="password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="Password" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-3">
                                    <div class="checkbox mb-2">
                                        <label asp-for="Input.RememberMe" class="form-label">
                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center mb-2">
                                    <label class="text-center px-lg-5" data-bs-toggle="modal" data-bs-target="#tcModal">
                                        <a asp-page="./ForgotPassword" class="text-warning">Forgot Password?</a>
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" onclick="loading()" class="btn btn-success btn-block btn-lg">
                                        Sign In
                                    </button>
                                </div>

                                <hr class="mt-5" />
                                <p class="text-center text-muted mt-2 mb-0">Don't have an account yet?</p>
                                <div class="d-flex justify-content-center mb-2 mt-2">
                                    <a role="button" asp-page="./Register" class="btn btn-primary btn-block btn-lg gradient-custom-4">Sign Up</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"   />
}